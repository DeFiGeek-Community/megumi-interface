{
  "compilerOptions": {
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "outDir": "./src",
    "paths": {
      "@/*": ["../../../../*"],
    },
  },
  "include": ["ts/**/*.ts"],
  "exclude": ["node_modules"]
}
